@model MvcIntro0.Models.ViewModels.RegistrationViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Registration";
}
<h2>Registration</h2>
<form asp-action="Registration" asp-controller="Authentication" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly"></div>
    @Html.ValidationMessageFor(acnt => acnt.Name)
    @Html.TextBoxFor(acnt => acnt.Name, new { @class = "form-control mb-1", placeholder = "Name" })
    @Html.ValidationMessageFor(acnt => acnt.Password)
    @Html.TextBoxFor(acnt => acnt.Password, new { @type="password", @class = "form-control mb-1", placeholder = "Password" })
    @Html.ValidationMessageFor(acnt => acnt.PasswordReiteration)
    @Html.TextBoxFor(acnt => acnt.PasswordReiteration, new { @type="password", @class = "form-control mb-1", placeholder = "Password repeat" })
    <button type="submit" class="btn border">Submit</button>
</form>