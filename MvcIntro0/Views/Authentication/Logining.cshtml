@model MvcIntro0.Models.ViewModels.LoginingViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Logining";
}
<h2>Logining</h2>
<form asp-action="Logining" asp-controller="Authentication" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly"></div>
    @Html.ValidationMessageFor(acnt => acnt.Name)
    @Html.TextBoxFor(acnt => acnt.Name, new { @class = "form-control mb-1", placeholder = "Name" })
    @Html.ValidationMessageFor(acnt => acnt.Password)
    @Html.TextBoxFor(acnt => acnt.Password, new { @type="password", @class = "form-control mb-1", placeholder = "Password" })
    <button type="submit" class="btn border">Submit</button>
</form>