@model Account

@{
    ViewData["Title"] = "Edition";
}


<a href="~/User/Index" class="btn border mb-2">Back</a>

<form method="post">

    @Html.HiddenFor(acnt => acnt.Id, new { CausesValidation = "False" })

    @Html.ValidationMessageFor(acnt => acnt.UserName)
    @Html.TextBoxFor(acnt => acnt.UserName, new { @class = "form-control mb-1", placeholder = "Name" })

    <input type="password" name="userPassword" class="form-control mb-1" placeholder="Password" />

    @if (User.IsInRole("admin"))
    {
        @Html.ValidationMessageFor(acnt => acnt.Role.Name)
        @Html.TextBoxFor(acnt => acnt.Role.Name, new { @class = "form-control mb-1", placeholder = "Role: admin, customer" })
    }

    @Html.ValidationMessageFor(acnt => acnt.Email)
    @Html.TextBoxFor(acnt => acnt.Email, new { @class = "form-control mb-1", placeholder = "E-mail" })

    @Html.ValidationMessageFor(acnt => acnt.PhoneNumber)
    @Html.TextBoxFor(acnt => acnt.PhoneNumber, new { @class = "form-control mb-1", placeholder = "Phone" })

    <button type="submit" class="btn border">Submit</button>

</form>