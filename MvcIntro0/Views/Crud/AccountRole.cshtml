@model IEnumerable<Account>
@{
    ViewData["Title"] = "Roles";
}

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <h4>Accounts</h4>
    <a href="~/Crud/Index" class="btn border">Back</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Role</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Account acnt in Model)
            {
                <tr>
                    <td>@acnt.Id</td>
                    <td>@acnt.UserName</td>
                    <td>@acnt.Role?.Title</td>
                    <td>
                        @if (acnt.Role?.Title != "admin")
                        {
                            <a href="~/Crud/ChangeAccountAuthorisation/@acnt.Id" class="btn border">Set as admin</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>