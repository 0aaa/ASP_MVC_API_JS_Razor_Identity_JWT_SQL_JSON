@model IEnumerable<Bike>

@{
    ViewData["Title"] = "Edition";
}


<!DOCTYPE html>
<html>
<head>
</head>
<body>

    <h4>Items</h4>


    <a href="~/Crud/Addition" class="btn border">Add item</a>


    <table class="table mt-2">

        <thead>
            <tr>
                <th><a asp-controller="Home" asp-action="Index" asp-route-orderBy="Line">Line</a></th>
                <th><a asp-controller="Home" asp-action="Index" asp-route-orderBy="Model">Model</a></th>
                <th><a asp-controller="Home" asp-action="Index" asp-route-orderBy="Frame">Frame</a></th>
                <th><a asp-controller="Home" asp-action="Index" asp-route-orderBy="Fork">Fork</a></th>
                <th><a asp-controller="Home" asp-action="Index" asp-route-orderBy="Shifter">Shifter</a></th>
                <th><a asp-controller="Home" asp-action="Index" asp-route-orderBy="Brake">Brake</a></th>
                <th><a asp-controller="Home" asp-action="Index" asp-route-orderBy="Cost">Cost</a></th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var bike in Model)
            {
                <tr>
                    <td>@bike.Line</td>
                    <td>@bike.Model</td>
                    <td>@bike.Frame</td>
                    <td>@bike.Fork</td>
                    <td>@bike.Shifter</td>
                    <td>@bike.Brake</td>
                    <td>$@bike.Cost</td>
                    <td><a href="~/Crud/Addition/@bike.BikeId" class="btn border">Edit</a></td>
                    <td>
                        <form action="~/Crud/Deletion" method="post">

                            <input type="hidden" name="id" value="@bike.BikeId" />

                            <button class="btn border" type="submit">Delete</button>

                        </form>
                    </td>
                </tr>
            }
        </tbody>

    </table>


    <ul class="pagination justify-content-center">
        @for (int pageNumber = 0; pageNumber < 3; pageNumber++)
        {
            <li class="page-item">
                <a href="~/Crud/Index/@pageNumber" class="page-link">@(pageNumber + 1)</a>
            </li>
        }
    </ul>

</body>
</html>