@{
    ViewData["Title"] = "Addition";
}
<form method="post">
    @Html.HiddenFor(item => item.Id, new { CausesValidation = "False" })

    @Html.ValidationMessageFor(model => model.UserName)
    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control mb-1", placeholder = "Name" })

    <button type="submit" class="btn border">Submit</button>
</form>