@using MvcIntro0.Models.ViewModels
@model SummaryIndexViewModel

@{
}


<h2>Summary</h2>


<a href="@Model.ReturnUrl" class="btn border">Back</a>


<table class="table mt-2">

    <thead>
        <tr>
            <th>Line</th>
            <th>Model</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Purchase total</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var chosen in Model.Summary.SummaryLst)
        {
            <tr>
                <td>@chosen.Bike.Line</td>
                <td>@chosen.Bike.Model</td>
                <td>@chosen.Qty</td>
                <td>@chosen.Bike.Cost</td>
                <td>@(chosen.Bike.Cost * chosen.Qty)</td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td>Total</td>
            <td>@Model.Summary.ComputeTotal()</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </tfoot>

</table>