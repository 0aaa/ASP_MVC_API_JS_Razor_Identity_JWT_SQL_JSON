@model MvcIntro0.Models.ViewModels.ItemsViewModel

@{
}



<div id="partialDiv" class="col-10">

    <table class="table mt-2">

        <thead>
            <tr>
                <th><a href="#" class="orderByLinks">Line</a></th>
                <th><a href="#" class="orderByLinks">Model</a></th>
                <th></th>
                <th><a href="#" class="orderByLinks">Frame</a></th>
                <th><a href="#" class="orderByLinks">Fork</a></th>
                <th><a href="#" class="orderByLinks">Shifter</a></th>
                <th><a href="#" class="orderByLinks">Brake</a></th>
                <th><a href="#" class="orderByLinks">Cost</a></th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var bike in Model.Items)
            {
                <tr>
                    <td>@bike.Line</td>
                    <td>@bike.Model</td>
                    <td class="w-100">
                        @*<img src="data:image/jpeg;base64, @Convert.ToBase64String(bike.Image64)" class="w-100"/>*@
                    </td>
                    <td>@bike.Frame</td>
                    <td>@bike.Fork</td>
                    <td>@bike.Shifter</td>
                    <td>@bike.Brake</td>
                    <td>$@bike.Cost</td>
                    <td>
                        <a href="~/Home/Order/@bike.BikeId" class="btn border">Buy</a>
                    </td>
                    <td>
                        @using (Html.BeginForm("Addition", "Summary"))
                        {
                            <input type="hidden" name="BikeId" value="@bike.BikeId" />

                            @Html.Hidden("returnUrl", Context.Request.Path.Value)

                            <button type="submit" class="btn border">Choose</button>
                        }
                    </td>
                </tr>
            }
        </tbody>

    </table>



    <ul class="pagination justify-content-center">
        @if (Model.ItemsCurrentPage > 1)
        {
            <li class="page-item">
                <a href="#" class="page-link paginationLinks">Previous</a>
            </li>                                                                                          
            <li class="page-item">                                                                         
                <a href="#" class="page-link paginationLinks">@(Model.ItemsCurrentPage - 1)</a>
            </li>
        }

        <li class="page-item active">
            <a href="#" class="page-link">@Model.ItemsCurrentPage</a>
        </li>

        @if (Model.ItemsCurrentPage < Model.ItemPagesTotalAmount)
        {
            <li class="page-item">
                <a href="#" class="page-link paginationLinks">@(Model.ItemsCurrentPage + 1)</a>
            </li>
            <li class="page-item">
                <a href="#" class="page-link paginationLinks">Next</a>
            </li>
        }
    </ul>

</div>